{
  "name": "ezedit",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -k \"pnpm --filter apps/api dev\" \"pnpm --filter apps/web dev\"",
    "dev:api": "pnpm --filter apps/api dev",
    "dev:web": "pnpm --filter apps/web dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prestart": "pnpm --silent install --recursive --frozen-lockfile || true",
    "start": "turbo run dev",
    "mcp:up": "docker compose up -d",
    "mcp:down": "docker compose down",
    "web:dev": "pnpm --filter web dev -- --host 0.0.0.0 --port 5173"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.11.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "zod": "^3.24.4"
  }
}
