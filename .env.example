# EzEdit.co Environment Configuration
# Copy this file to .env and update with your secure keys

# CRITICAL: Generate new secure keys for production!
# Use: openssl rand -base64 32

# Master encryption key for AES-256 encryption (32 bytes base64 encoded)
EZEDIT_MASTER_KEY="YOUR_SECURE_32_BYTE_BASE64_ENCODED_KEY_HERE"

# Salt key for key derivation (32 bytes base64 encoded)
EZEDIT_SALT_KEY="YOUR_SECURE_32_BYTE_BASE64_ENCODED_SALT_HERE"

# Database configuration
EZEDIT_DB_PATH="/secure/path/to/ezedit_secure.db"

# Session configuration
EZEDIT_SESSION_LIFETIME=3600
EZEDIT_SESSION_NAME="EZEDIT_SESS"

# Security settings
EZEDIT_ENABLE_AUDIT_LOG=true
EZEDIT_LOG_RETENTION_DAYS=2555  # 7 years for HIPAA compliance
EZEDIT_RATE_LIMIT_REQUESTS=120
EZEDIT_RATE_LIMIT_WINDOW=3600

# SMTP configuration for notifications (optional)
EZEDIT_SMTP_HOST=""
EZEDIT_SMTP_PORT=587
EZEDIT_SMTP_USERNAME=""
EZEDIT_SMTP_PASSWORD=""
EZEDIT_SMTP_FROM=""

# Two-factor authentication (optional)
EZEDIT_2FA_ISSUER="EzEdit.co"
EZEDIT_2FA_REQUIRED=false

# File upload limits
EZEDIT_MAX_FILE_SIZE=10485760  # 10MB
EZEDIT_ALLOWED_EXTENSIONS="txt,html,htm,php,css,js,json,xml,md,py,rb,java,cpp,c,sh"

# FTP connection limits
EZEDIT_FTP_TIMEOUT=30
EZEDIT_MAX_FTP_CONNECTIONS=10

# Development settings (set to false in production)
EZEDIT_DEBUG=false
EZEDIT_SHOW_ERRORS=false