# EzEdit.co Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# DigitalOcean API (for deployment only)
DO_API_KEY=your_digitalocean_api_key_here

# GitHub Personal Access Token (for deployment only)
GITHUB_TOKEN=your_github_token_here

# Stripe Configuration
STRIPE_PRICE_ONE_TIME_SITE=price_your_stripe_price_id
STRIPE_PRICE_SUB_PRO=price_your_stripe_subscription_id
STRIPE_SECRET_KEY=sk_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_your_stripe_publishable_key

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Application Security
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_for_ftp_credentials
SESSION_SECRET=your_session_secret_for_cookies

# Redis Configuration (for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# OpenAI/Claude API Keys (for AI features)
OPENAI_API_KEY=your_openai_api_key
CLAUDE_API_KEY=your_claude_api_key

# Environment
NODE_ENV=development
PORT=3000
DOMAIN=localhost:3000