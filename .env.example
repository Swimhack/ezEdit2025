# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# AI API Keys
# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# NextAuth Configuration (if using NextAuth.js)
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Database URL (if using direct database connection)
DATABASE_URL=postgresql://user:password@host:port/database

# FTP/File Storage Configuration
# Encryption key for storing FTP passwords securely
FTP_ENCRYPTION_KEY=your-32-character-encryption-key-here

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=html,css,js,jsx,ts,tsx,php,py,rb,go,java,cpp,c,json,xml,md,txt,yml,yaml

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000  # 24 hours

# Email Configuration (for notifications, password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@ezedit.co

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=GA-your-tracking-id

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_FILE_HISTORY=true
ENABLE_COLLABORATION=false
ENABLE_TELEMETRY=true

# Development Configuration
DEV_MODE=true
DEBUG_MODE=false
HOT_RELOAD=true

# Production Configuration
PRODUCTION_URL=https://ezedit.co
CDN_URL=https://cdn.ezedit.co

# Security Configuration
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=7d
CSRF_SECRET=your-csrf-secret-here

# Third-party Integrations
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Deployment Configuration
BUILD_ID=local-dev
DEPLOYMENT_ENV=development
HEALTH_CHECK_ENDPOINT=/api/health