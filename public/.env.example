# EzEdit.co Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ezedit_db
DB_USERNAME=ezedit_user
DB_PASSWORD=your_secure_database_password_here

# Application Security
APP_SECRET_KEY=your_super_secret_app_key_here_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_for_ftp_passwords_change_this

# Supabase Configuration (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_API_URL=https://api.anthropic.com/v1

# Context7 MCP Configuration
CONTEXT7_MCP_PORT=3000
CONTEXT7_MCP_TRANSPORT=stdio

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://ezedit.co

# Session Configuration
SESSION_LIFETIME=7200
REMEMBER_ME_LIFETIME=2592000

# Email Configuration (for password resets)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@ezedit.co
SMTP_FROM_NAME=EzEdit.co

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_USER=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600