{
  "components": [
    {
      "name": "Button",
      "description": "Primary action button component",
      "variants": [
        {
          "name": "primary",
          "className": "bg-primary-500 hover:bg-primary-600 text-white font-medium py-2 px-4 rounded-md transition-colors"
        },
        {
          "name": "secondary",
          "className": "bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-2 px-4 rounded-md transition-colors"
        },
        {
          "name": "outline",
          "className": "border border-primary-500 text-primary-500 hover:bg-primary-50 font-medium py-2 px-4 rounded-md transition-colors"
        }
      ],
      "props": {
        "children": {
          "type": "ReactNode",
          "description": "Button content"
        },
        "onClick": {
          "type": "function",
          "description": "Click handler"
        },
        "disabled": {
          "type": "boolean",
          "description": "Disabled state",
          "default": false
        }
      }
    },
    {
      "name": "Card",
      "description": "Content container with optional header and footer",
      "className": "bg-white rounded-lg shadow-md overflow-hidden",
      "parts": [
        {
          "name": "header",
          "className": "px-6 py-4 border-b border-gray-200"
        },
        {
          "name": "body",
          "className": "px-6 py-4"
        },
        {
          "name": "footer",
          "className": "px-6 py-4 bg-gray-50 border-t border-gray-200"
        }
      ],
      "props": {
        "children": {
          "type": "ReactNode",
          "description": "Card content"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes"
        }
      }
    },
    {
      "name": "Input",
      "description": "Text input field with label",
      "className": "mb-4",
      "parts": [
        {
          "name": "label",
          "className": "block text-sm font-medium text-gray-700 mb-1"
        },
        {
          "name": "field",
          "className": "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
        },
        {
          "name": "error",
          "className": "mt-1 text-sm text-red-600"
        }
      ],
      "props": {
        "label": {
          "type": "string",
          "description": "Input label"
        },
        "type": {
          "type": "string",
          "description": "Input type (text, password, email, etc.)",
          "default": "text"
        },
        "value": {
          "type": "string",
          "description": "Input value"
        },
        "onChange": {
          "type": "function",
          "description": "Change handler"
        },
        "error": {
          "type": "string",
          "description": "Error message"
        }
      }
    }
  ]
}
